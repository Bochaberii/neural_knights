<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Drive wheel macro -->
  <xacro:macro name="drive_wheel" params="name ysign">
    <link name="${name}">
      <visual>
        <origin xyz="0 ${ysign*wheel_sep/2.0} ${-Rwheel}" rpy="0 0 0"/>
        <geometry><cylinder radius="${Rwheel}" length="${wheel_width}"/></geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <origin xyz="0 ${ysign*wheel_sep/2.0} ${-Rwheel}" rpy="0 0 0"/>
        <geometry><cylinder radius="${Rwheel}" length="${wheel_width}"/></geometry>
      </collision>
    </link>

    <joint name="${name}_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${name}"/>
      <origin xyz="0 ${ysign*wheel_sep/2.0} ${-Rwheel}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <!-- Caster macro -->
  <xacro:macro name="caster" params="name xsign">
    <link name="${name}">
      <visual>
        <origin xyz="${xsign*(Rlower-0.03)} 0 ${-Rcaster}" rpy="0 0 0"/>
        <geometry><sphere radius="${Rcaster}"/></geometry>
        <material name="black"/>
      </visual>
      <collision>
        <origin xyz="${xsign*(Rlower-0.03)} 0 ${-Rcaster}" rpy="0 0 0"/>
        <geometry><sphere radius="${Rcaster}"/></geometry>
      </collision>
    </link>

    <joint name="${name}_mount" type="fixed">
      <parent link="base_link"/>
      <child link="${name}"/>
      <origin xyz="${xsign*(Rlower-0.03)} 0 0" rpy="0 0 0"/>
    </joint>
  </xacro:macro>

</robot>
